@{
    Layout = "~/Views/Shared/Admin/_Layout.cshtml";
    List<UrgenciaModel> urgencias = ViewBag.urgencias;
}
<a asp-controller="Admin" asp-action="IniciarS">Iniciar</a>
<a asp-controller="Admin" asp-action="VerSesion">Ver</a>
<table class="table">
    <thead>
        <tr>
            <td>ID</td>
            <td>Nombre</td>
            <td>Telefono</td>
            <td>Fecha consulta</td>
            <td>NSS</td>
            <td>Acciones</td>
        </tr>
    </thead>
    <tbody>
        @if (urgencias != null)
        {
            @foreach (var urgencia in urgencias)
            {
                <tr>
                    <td>@urgencia.Id</td>
                    <td>@urgencia.Nombre</td>
                    <td>@urgencia.Telefono</td>
                    <td>@urgencia.FechaNac.ToShortDateString()</td>
                    <td>@urgencia.Nss</td>
                    <td>
                        <a target="_blank" asp-route-id="@urgencia.Id" asp-controller="Urgencias" asp-action="Editar" type="button" class="btn btn-secondary" aria-label="Editar">
                            <i class="fas fa-eye"></i>
                        </a>
                        <a type="button" class="btn btn-danger" aria-label="Eliminar">
                            <i class="fas fa-trash"></i>
                        </a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
