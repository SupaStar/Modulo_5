@{
    List<SugerenciaModel> sugerencias = ViewBag.sugerencias;
    Layout = "~/Views/Shared/Admin/_Layout.cshtml";
}
<table class="table table-bordered">
    <thead class="thead-dark">
        <tr>
            <th scope="col">ID</th>
            <th scope="col">Email</th>
            <th scope="col">Descripcion</th>
            <th scope="col">Acciones</th>
        </tr>
    </thead>
    <tbody>
        @if (sugerencias != null)
        {
            @foreach (SugerenciaModel sugerencia in sugerencias)
            {
                <tr>
                    <td>@sugerencia.Id</td>
                    <td>@sugerencia.Email</td>
                    <td>
                        @if (sugerencia.Descripcion.Length >= 50)
                        {
                            @for(int i = 0; i <= 50; i++)
                            {
                                @sugerencia.Descripcion[i]
                            } 
                        }
                        else
                        {
                            @sugerencia.Descripcion
                        }
                    </td>
                    <td>
                        <a target="_blank" asp-route-id="@sugerencia.Id" asp-controller="QuejaSugerencia" asp-action="VerSugerencia" type="button" class="btn btn-secondary" aria-label="Ver">
                            <i class="fas fa-eye"></i>
                        </a>
                        <a class="btn btn-success" asp-route-id="@sugerencia.Id" asp-controller="Admin" asp-action="ValidarSugerencia" aria-label="Validar">
                            <i class="fas fa-check"></i>
                        </a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>