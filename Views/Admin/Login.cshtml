@{
    Layout = "~/Views/Shared/Admin/_Layout.cshtml";
    string errores = ViewBag.error;
}
@model UsuarioModel
<section>
    @using (Html.BeginForm("IniciarS", "Admin", FormMethod.Post))
    {
        @if (errores != null)
        {
            <div class="alert alert-danger" role="alert">
                @errores
            </div>
        }
        @Html.AntiForgeryToken()
        <div class="form-group row">
            @Html.LabelFor(x => x.Correo, new { @class = "col-sm-4 col-form-label" })
            <div class="col">
                @Html.TextBoxFor(x => x.Correo,
               new { @class = "form-control", placeholder = "email@example.com", autofocus = "autofocus" })
                @Html.ValidationMessageFor(x => x.Correo, null, new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group row">
            @Html.LabelFor(x => x.Password, new { @class = "col-sm-4 col-form-label" })
            <div class="col">
                @Html.TextBoxFor(x => x.Password,
               new { @class = "form-control", type = "password", placeholder = "Password" })
                @Html.ValidationMessageFor(x => x.Password, null, new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="form-check">
                <input type="checkbox" class="form-check-input" id="dropdownCheck2">
                <label class="form-check-label" for="dropdownCheck2">
                    Recuerdame
                </label>
            </div>
        </div>
        <button type="submit" class="btn btn-primary">Iniciar sesion</button>
    }
</section>