@{
    QuejaModel queja = ViewBag.queja;
    ViewData["Title"] = "Ver Sugerencia";
    Layout = "~/Views/Shared/Admin/_Layout.cshtml";
    string estado = queja.Estado == 1 ? "No validada" : "Validada";
}
<section id="seccionlogin" class="jumbotron container-fluid">
    <div class="form-group row">
        <label class="col-sm-4 col-form-label" for="Id">@Html.DisplayNameFor(model => queja.Id)</label>
        <div class="col">
            <input readonly id="Id" class="form-control" value="@queja.Id" />
        </div>
    </div>
    <div class="form-group row">
        <label class="col-sm-4 col-form-label" for="Id_urgencia">@Html.DisplayNameFor(model => queja.Id_urgencia)</label>
        <div class="col-6">
            <input readonly id="Id_urgencia" class="form-control" value="@queja.Id_urgencia" />
        </div>
    </div>
    <div class="form-group row">
        <label class="col-sm-4 col-form-label" for="Email">@Html.DisplayNameFor(model => queja.Email)</label>
        <div class="col-6">
            <input readonly id="Email" class="form-control" value="@queja.Email" />
        </div>
    </div>
    <div class="form-group row">
        <label class="col-sm-4 col-form-label" for="Descripcion">@Html.DisplayNameFor(model => queja.Descripcion)</label>
        <div class="col">
            <textarea readonly id="Descripcion" class="form-control" rows="6">@queja.Descripcion</textarea>
        </div>
    </div>
    <div class="form-group row">
        <label class="col-sm-4 col-form-label" for="Estado">@Html.DisplayNameFor(model => queja.Estado)</label>
        <div class="col">
            <input readonly id="Estado" class="form-control" value="@estado" />
        </div>
    </div>
    @model SolucionQuejaModel
    <form action="/Admin/ValidarQueja/@queja.Id" method="post">
        <div class="form-group row">
            @Html.LabelFor(x => x.solucion, new { @class = "col-sm-4 col-form-label" })
            <div class="col">
                @Html.TextAreaFor(x => x.solucion, new { @class = "form-control", placeholder = "Solucion a la queja.", autofocus = "autofocus" })
                @Html.ValidationMessageFor(x => x.solucion, null, new { @class = "text-danger" })
            </div>
        </div>
        <button class="btn btn-success">Validar Queja</button>
    </form>
</section>